<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="387dp"
        android:layout_height="350dp"
        android:layout_marginBottom="35dp"
        android:onClick="lifeCalculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtractionLeft">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="7"
            android:text="7"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="8"
            android:text="8"
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="9"
            android:text="9"
            android:textSize="35sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="4"
            android:text="4"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="5"
            android:text="5"
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="6"
            android:text="6"
            android:textSize="35sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="1"
            android:text="1"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="2"
            android:text="2"
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="3"
            android:text="3"
            android:textSize="35sp"
            app:layout_column="2" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="0"
            android:text="0"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonDoubleZero"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="11"
            android:text="00"
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonTripleZero"
            android:layout_width="133dp"
            android:layout_height="88dp"
            android:onClick="lifeCalculator"
            android:tag="111"
            android:text="000"
            android:textSize="35sp"
            app:layout_column="2"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="387dp"
        android:layout_height="122dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/playerOneLifeView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/yugi" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/kaiba" />
    </LinearLayout>

    <TextView
        android:id="@+id/playerOneLifeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="19dp"
        android:text="8000"
        android:textSize="35sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/additionLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/playerTwoLifeView"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="19dp"
        android:text="8000"
        android:textSize="35sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/additionRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/additionLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:onClick="addLifePlayerOne"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/subtractionLeft"
        app:layout_constraintEnd_toStartOf="@+id/dice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerOneLifeView" />

    <Button
        android:id="@+id/additionRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:onClick="addLifePlayerTwo"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/subtractionRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dice"
        app:layout_constraintTop_toBottomOf="@+id/playerTwoLifeView" />

    <Button
        android:id="@+id/subtractionLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="18dp"
        android:onClick="subtractLifePlayerOne"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/dice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionLeft" />

    <Button
        android:id="@+id/subtractionRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="18dp"
        android:onClick="subtractLifePlayerTwo"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dice"
        app:layout_constraintTop_toBottomOf="@+id/additionRight" />

    <TextView
        android:id="@+id/editLifeByView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="11dp"
        android:text="0"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/dice"
        app:layout_constraintEnd_toStartOf="@+id/playerTwoLifeView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/playerOneLifeView"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <Button
        android:id="@+id/dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="3dp"
        android:onClick="diceSimulator"
        android:text="Dice: ?"
        app:layout_constraintBottom_toTopOf="@+id/clearButton"
        app:layout_constraintEnd_toStartOf="@+id/additionRight"
        app:layout_constraintStart_toEndOf="@+id/additionLeft"
        app:layout_constraintTop_toBottomOf="@+id/editLifeByView" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="26dp"
        android:onClick="clearCalculation"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/subtractionRight"
        app:layout_constraintStart_toEndOf="@+id/subtractionLeft"
        app:layout_constraintTop_toBottomOf="@+id/dice" />

</androidx.constraintlayout.widget.ConstraintLayout>